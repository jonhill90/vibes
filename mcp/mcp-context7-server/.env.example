# MCP Context7 Server Configuration
# Copy this file to .env and modify as needed

# Optional: Server name for identification
SERVER_NAME=mcp-context7-server

# Optional: Enable debug logging
DEBUG=false

# Context7 API Configuration
# The base URL for Context7 API (usually no need to change)
CONTEXT7_API_URL=https://api.context7.com

# Optional: Transport type (stdio, http, sse)
TRANSPORT_TYPE=stdio

# Optional: Port for HTTP/SSE transport
PORT=3000
