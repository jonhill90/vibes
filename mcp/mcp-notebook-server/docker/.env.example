# INMPARA MCP Server Configuration

# Vault Configuration
VAULT_PATH=/workspace/vibes/repos/inmpara
DATABASE_PATH=/data/db/inmpara.db

# Server Configuration  
LOG_LEVEL=INFO
DEBUG=false
MCP_PORT=8000

# Qdrant Vector Database Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6334
QDRANT_HTTP_PORT=6333
QDRANT_COLLECTION=inmpara_vault

# Processing Configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.85
AUTO_APPROVE_HIGH_CONFIDENCE=true
BATCH_SIZE=50

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MOC_GENERATION=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_BULK_REPROCESS=true
ENABLE_VECTOR_SEARCH=true

# Paths (Docker)
CONTAINER_VAULT_PATH=/data/vault
CONTAINER_DB_PATH=/data/db
CONTAINER_LOG_PATH=/app/logs
