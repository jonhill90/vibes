# LiteLLM Infrastructure Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# PORT CONFIGURATION
# =============================================================================
LITELLM_PROXY_PORT=4001
LITELLM_DB_PORT=5434

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=litellm
POSTGRES_USER=litellm
POSTGRES_PASSWORD=your_secure_db_password_here
DATABASE_URL=postgresql://litellm:your_secure_db_password_here@litellm-db:5432/litellm

# =============================================================================
# LITELLM PROXY CONFIGURATION
# =============================================================================
# Store model configurations in database (required for UI management)
STORE_MODEL_IN_DB=True

# Master key for LiteLLM admin operations
LITELLM_MASTER_KEY=your_master_key_here

# Salt for hashing (generate with: openssl rand -hex 32)
LITELLM_SALT_KEY=your_salt_key_here

# JWT secret for authentication (generate with: openssl rand -hex 64)
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Enable/disable authentication for the UI
LITELLM_AUTH_ENABLED=True

# UI Base URL (for OAuth redirects if using external auth)
UI_BASE_URL=http://localhost:4001

# =============================================================================
# MCP SERVER MANAGEMENT
# =============================================================================
# Default timeout for MCP server connections (seconds)
MCP_CONNECTION_TIMEOUT=30

# Max concurrent MCP connections
MCP_MAX_CONNECTIONS=10

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable detailed request logging
LITELLM_LOG=True

# Callback URL for usage tracking (optional)
# CALLBACK_URL=http://localhost:8090/usage

# =============================================================================
# RATE LIMITING
# =============================================================================
# Default rate limits (requests per minute)
DEFAULT_RATE_LIMIT_RPM=60

# Default token limits (tokens per minute)
DEFAULT_RATE_LIMIT_TPM=10000

# =============================================================================
# COST TRACKING
# =============================================================================
# Enable cost tracking per MCP server
ENABLE_COST_TRACKING=True

# Default budget per team/user (USD)
DEFAULT_BUDGET=100.00

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Docker network name (should match Vibes network)
DOCKER_NETWORK=vibes-network

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# DEVELOPMENT/DEBUG OPTIONS
# =============================================================================
# Enable debug mode
DEBUG=False

# Enable CORS for development (set origins or * for all)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Enable hot reload in development
HOT_RELOAD=False
